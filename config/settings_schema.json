	{
		"name": "Collections",
		"settings": [
			{
				"type": "header",
				"content": "Navigation",
				"info": "Provides relationship for collections and sub collections for use in collection page sub menus and breadcrumbs for collections and product pages."
			},
			{
				"type": "link_list",
				"label": "Navigation",
				"id": "menu",
				"default": "main-menu"
			}
		]
	},
	{
		"name": "Product grid",
		"settings": [
			{
				"type": "checkbox",
				"id": "borders_enable",
				"label": "Enable borders",
				"default": true
			},
			{
				"type": "checkbox",
				"id": "image_hover",
				"label": "Show rollover image",
				"default": true
			},
			{
				"type": "checkbox",
				"id": "title_align",
				"label": "Enable product title alignment",
				"info": "Consider if product images are not the same size",
				"default": true
			},
			{
				"type": "checkbox",
				"id": "reviews_enable",
				"label": "Show product reviews",
				"info": "Install the free Shopify [Product Reviews](https://apps.shopify.com/product-reviews) app to add product reviews.",
				"default": true
			},
			{
				"type": "checkbox",
				"id": "vendor_enable",
				"label": "Show product vendor",
				"default": true
			},
			{
				"type": "checkbox",
				"id": "quick_collection_hover",
				"label": "Enable product button hover",
				"default": false
			},
			{
				"type": "checkbox",
				"id": "go_to_cart_enable",
				"label": "Product add to cart redirection",
				"info": "Use to stay on the product page after clicking add to cart",
				"default": true
			},
			{
				"type": "header",
				"content": "Quick view"
			},
			{
				"type": "checkbox",
				"id": "quick_view_enable",
				"label": "Enable quick view",
				"default": true
			},
			{
				"type": "checkbox",
				"id": "sku_enable_quick",
				"label": "Show product SKU",
				"default": true
			},
			{
				"type": "checkbox",
				"id": "product_availability_enable_quick",
				"label": "Show product availability",
				"default": true
			},
			{
				"type": "range",
				"id": "product_availability_total_quick",
				"min": 2,
				"max": 100,
				"step": 1,
				"label": "Minimum number of products remaining to display remaining stock",
				"default": 15
			},
			{
				"type": "checkbox",
				"id": "var_length_enable_quick",
				"label": "Show single option variant",
				"default": false
			},
			{
				"type": "checkbox",
				"id": "qty_enable_quick",
				"label": "Show product quantity",
				"default": true
			},
			{
				"type": "checkbox",
				"id": "smart_enable_quick",
				"label": "Show dynamic checkout button",
				"info": "Each customer will see their preferred payment method from those available on your store, such as PayPal or Apple Pay. [Learn more](https://help.shopify.com/manual/using-themes/change-the-layout/dynamic-checkout)",
				"default": true
			}
		]
	},
	{
		"name": "General",
		"settings": [
			{
				"type": "header",
				"content": "Date format"
			},
			{
				"type": "select",
				"id": "month_day_year",
				"label": "Date",
				"default": "%b %e, '%y",
				"options": [
					{
						"value": "%b %e, '%y",
						"label": "Feb 6, '77"
					},
					{
						"value": "%B %d, %Y",
						"label": "February 6, 1977"
					},
					{
						"value": "%Y-%-m-%e",
						"label": "1977-2-6"
					},
					{
						"value": "%-m/%e/%y",
						"label": "2/6/77"
					},
					{
						"value": "%e/%-m/%y",
						"label": "6/2/77"
					}
				]
			},
			{
				"type": "header",
				"content": "Gift card"
			},
			{
				"type": "image_picker",
				"id": "gift-card",
				"label": "Choose a custom image to be used on the gift card page"
			}
		]
	}
