{% comment %}
//
// Error Customize Setting
//
{% endcomment %}

{% if form.errors %}
	<div class="errors note form-error">
		<p>{{ 'contact.form.form_error' | t }}</p>

		<ul>
			{% for field in form.errors %}

				{% comment %}
					Check if it's a generic 'form' error and don't show the {{ field }}
				{% endcomment %}

				{% if field == 'form' %}
					<li>
						{{ form.errors.messages[field] }}
					</li>
				{% else %}
					<li>
						The <strong>{{ field | replace: 'body', 'Message' }}</strong> field {{ form.errors.messages[field] }}
					</li>
				{% endif %}

			{% endfor %}
		</ul>
	</div>
{% endif %}