{% if request.host != 'sonnyangelusa.com' %}

	{%- if customer -%}
		{%- if customer.tags contains "English" -%}

	<script>
		var $lang = localStorage.getItem('lang');
		var $url = location.href;
		var $path = location.pathname;

		if ( $lang != 'en' ) {

			if ( $path ) {
				if ( $path == '/' ) {
					var $redirect_url = $url.replace('.com', '.com/en');
				} else {
					var $redirect_path = '/en' + $path;
					var $redirect_url = $url.replace($path, $redirect_path);
				}
			} else {
				var $redirect_url = $url.replace('.com', '.com/en');
			}

			location.href = $redirect_url;
			localStorage.setItem('lang', 'en');

		} else if ( $lang == 'en' ) {
			if ( $path.indexOf('en/en') != -1) {
				var $redirect_url = $url.replace('en/en', 'en');
				location.href = $redirect_url;
			}
		}

	</script>

		{%- endif -%}
	{%- endif -%}

